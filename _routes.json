{
  "version": 1,
  "include": [
    "/*"
  ],
  "exclude": [
    "/build/*",
    "/node_modules/*"
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET,HEAD,PUT,PATCH,POST,DELETE"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization, x-client-info, apikey, X-Client-Info"
        },
        {
          "key": "X-Frame-Options",
          "value": "SAMEORIGIN"
        },
        {
          "key": "X-Content-Type-Options", 
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    }
  ],
  "routes": [
    {
      "src": "^/samples/([^/]+)/?$",
      "dest": "/samples/[id].html"
    },
    {
      "src": "^/checkout/([^/]+)/?$",
      "dest": "/checkout/[id].html"
    },
    {
      "src": "^/samples/?$",
      "dest": "/samples.html"
    },
    {
      "src": "^/team/?$",
      "dest": "/team.html"
    },
    {
      "src": "^/about/?$",
      "dest": "/about.html"
    },
    {
      "src": "^/contact/?$",
      "dest": "/contact.html"
    },
    {
      "src": "^/login/?$",
      "dest": "/login.html"
    },
    {
      "src": "^/register/?$",
      "dest": "/register.html"
    },
    {
      "src": "^/profile/?$",
      "dest": "/profile.html"
    },
    {
      "src": "^/upload/?$",
      "dest": "/upload.html"
    },
    {
      "src": "^/auth/callback/?$",
      "dest": "/auth/callback.html"
    },
    {
      "src": "^/$",
      "dest": "/index.html"
    },
    {
      "src": "^/.*$",
      "dest": "/404.html"
    }
  ]
}
